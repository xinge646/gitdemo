<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.Billdao">

  <select id="Query" resultType="Bill">
     SELECT * FROM `order`
     <where>
     <if test="name!=null and name!=''">
       and name like CONCAT('%',#{name},'%')
     </if>
     <if test="isPayment!=null and isPayment!=0">
       and isPayment like CONCAT('%',#{isPayment},'%')
     </if>
     </where>
     LIMIT #{currentPageNo},5
  </select>
  
  
  <!-- 查询总记录数 -->
  <select id="count"  resultType="int" parameterType="map">
      SELECT COUNT(*) FROM `order`
      <where>
      <if test="isPayment!=null and isPayment!= 0"> 
	   and isPayment like CONCAT('%',#{isPayment},'%')
	  </if>
	  <if test="name!=null and name != ''"> 
	   and name like CONCAT('%',#{name},'%')
	  </if>
	  </where>
  </select>

  <select id="count1"  resultType="int" parameterType="map">
      SELECT COUNT(*) FROM `order`
      <where>
      <if test="isPayment!=null and isPayment!= 0"> 
	   and isPayment like CONCAT('%',#{isPayment},'%')
	  </if>
	  <if test="name!=null and name != ''"> 
	   and name like CONCAT('%',#{name},'%')
	  </if>
	  </where>
  </select>

</mapper>